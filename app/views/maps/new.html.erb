<div class="container">
  <div class="d-flex justify-content-center align-content-center align-items-center min-vh-100">
    <div class="col-8 text-center d-flex justify-content-center bg-light p-5 rounded">
      <%= form_tag url_for(action: "create"), method: "post" do %>
        <div class="form-input">
          <%= label_tag "Titre de la carte" %>
          <%= text_field_tag "title" %>
          <br>
          <br>
        </div>
        <div class="form-input">
          <%= text_area_tag "content", "Adresse de la carte hébergée sur https://www.zupimages.net/index.php?goto-form (deuxième lien fourni)", style:"width:45rem" %>
          <br>
          <br>
        </div>
        <div class="text-center">
          <%= submit_tag "Confirmer la création", type: "submit", class: "btn btn-primary text-center", style: "padding: 10px; width:90%" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
