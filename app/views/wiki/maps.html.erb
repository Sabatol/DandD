<div class="container mt-5">
  <div class="card-deck">
    <% @maps.each do |map| %>
      <div class="card p-3">
        <p align="center"><img src="<%=map.content%>" class="card-img-top" style="width:30%" alt="..."></p>
        <div class="card-body text-center">
          <%= link_to map.title, map_path(map.id), class:"text-dark" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
